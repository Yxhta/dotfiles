" Color scheme
set background=dark
set termguicolors
colorscheme iceberg

" ビープ音をミュートする
set belloff=all

" ナードツリーのキーマップ
nmap <leader>n :NERDTreeToggle<CR>
let g:NERDTreeWinPos="right"

" Enable undo
if has('persistent_undo')
  set undodir=~/.vim/undo
  set undofile
endif

" fzf
nnoremap <leader>o :Files<CR>
nnoremap <leader>b :Buffer<CR>
nnoremap <leader>h :History<CR>
